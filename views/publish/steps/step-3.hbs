{{> header}}

<div class="container" role="main">
  <h1>Publish your work</h1>

  <h2>
    <span class="small">Step 3 of 3</span>
    <br />
    Upload or write publication
  </h2>

  <br/>

  <form method="POST" action="/publish/save" enctype="multipart/form-data">
    <input type="hidden" name="publicationType" value="{{publication.publicationType}}" />
    <input type="hidden" name="linkedPublications" value="{{publication.linkedPublications}}" />
    <input type="hidden" name="publicationTitle" value="{{publication.publicationTitle}}" />
    <input type="hidden" name="publicationSummary" value="{{publication.publicationSummary}}" />
    <input type="hidden" name="publicationKeywords" value="{{publication.publicationKeywords}}" />
    <input type="hidden" name="collaborators" value="{{publication.collaborators}}" />
    <input type="hidden" name="fundingStatement" value="{{publication.fundingStatement}}" />
    <input type="hidden" name="coiDeclaration" value="{{publication.coiDeclaration}}" />

    <div class="form-group">
      <label for="publicationFile">You can upload your publication in pdf, doc or docx format, or enter the content of your publication in the editor.</label>

      <p>If you upload a publication you will be able to edit it before submission.</p>

      <br />

      <input id="publicationFile" name="publicationFile" type="file" value="" />
    </div>

    <button type="submit" class="btn btn-md btn-primary">Save and proceed</button>
  </form>
</div>

{{> publishingInfoModal}}

{{> navTop}}

{{> footer}}
