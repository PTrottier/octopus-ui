{{> header}}

<div class="container-fluid text-center" role="main">
  <h1>Error while trying to publish :-(</h1>
</div>

<div class="container-fluid text-center" role="main">
  {{#if error}}
    <p class="text-semi-strong">Error:</p>
    <p>{{error}}</p>
    <br /><br />
  {{/if}}

  {{#if linked}}
    <form method="POST" action="/publish/step/1?linked={{linked}}">
      <input type="submit" class="btn btn-lg btn-primary" value="Try again">
    </form>
  {{else}}
    <a class="btn btn-lg btn-primary" href="/publish">Try again</a>
  {{/if}}
</div>

{{> navTop}}

{{> footer}}
