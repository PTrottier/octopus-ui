<div class="container-fluid" id="mainBody" role="main">
  <div class="row">
    <div class="col-sm-9">

      <h1><span class="text-accent">{{publication.type}}:</span> {{publication.title}}</h1>

      <p>Authors: {{publication.authors}}</p>
      <p>Date added: {{formatDate publication.dateCreated}}</p>

      <hr />

      <p>Part of problems: {{publication.parentProblems}}</p>
      <p>Parent publications: {{publication.parentPublication}}</p>

      <hr />

      <div>
        <h3>Summary</h3>
        {{#if (equals publication.status 'DRAFT')}}
          <textarea class="form-control" id="publicationSummary" name="publicationSummary">{{publication.summary}}</textarea>
        {{else}}
          {{publication.summary}}
        {{/if}}
      </div>

      <hr />

      <div>
        <h3>Full text</h3>
        {{#if (equals publication.status 'DRAFT')}}
          <textarea id="publicationText" name="publicationText">{{{publication.text}}}</textarea>
        {{else}}
          {{{publication.text}}}
        {{/if}}
      </div>

      <hr />

      <div>
        <h3>Additional information</h3>
        <p>
          <strong>Funding Statement:</strong>
          <br />
          {{#if (equals publication.status 'DRAFT')}}
            <textarea class="form-control" id="publicationFundingStatement" name="publicationFundingStatement">{{publication.fundingStatement}}</textarea>
          {{else}}
            {{publication.fundingStatement}}
          {{/if}}
        </p>
        <p>
          <strong>Conflict of Interest Declaration:</strong>
          <br />
          {{#if (equals publication.status 'DRAFT')}}
            <textarea class="form-control" id="publicationCoiDeclaration" name="publicationCoiDeclaration">{{publication.coiDeclaration}}</textarea>
          {{else}}
            {{publication.coiDeclaration}}
          {{/if}}
        </p>
        <p>
          <strong>Keywords:</strong>
          <br />
          <!-- {{publication.keywords}} -->
          {{#if (equals publication.status 'DRAFT')}}
            <input class="form-control" id="publicationKeywords" name="publicationKeywords" />{{publication.keywords}}
          {{else}}
            {{publication.keywords}}
          {{/if}}
        </p>
        <p>
          <strong>Files:</strong>
          <br />
          {{publication.files}}
        </p>
      </div>
    </div>

    <div class="col-sm-3" id="sidebar">
      {{#if (equals publication.status 'DRAFT')}}
        <p>
          This publication is still a draft visible only to you and other authors.<br />
          You need to publish it before this publication is visible in Octopus.
        </p>
        <a href="#" class="btn btn-md btn-primary">Publish now</a>
      {{else}}
        <h2>Ratings</h2>
        <div>7 ratings</div>

        <h2>Reviews</h2>
        <div>3 reviews</div>

        <br />
        <hr />
        <br />

        <a href="#" class="btn btn-md btn-default">Write a review</a>
        <br /><br />
        <a href="#" class="btn btn-md btn-default">Write a linked publication</a>
      {{/if}}
    </div>

  </div>
</div>

{{#if (equals publication.status 'DRAFT')}}
  <!-- EDIT MODE ENABLED -->
  <link type="text/css" rel="stylesheet" href="/public/vendor/jodit-3.2.46/jodit.min.css">
  <script type="text/javascript" src="/public/vendor/jodit-3.2.46/jodit.min.js"></script>

  <script>
    var editor = new Jodit('#publicationText');
  </script>
{{/if}}
