<div class="modal fade redFlagPublicationModal" tabindex="-1" role="dialog" id="redFlagPublicationModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Red Flag {{publicationTitle}} ?</h4>
      </div>
      <div class="modal-body">
        <form method="POST" action="/red-flag-publication/{{publication._id}}">
          <label for="redFlagPublicationCategory">Category</label>

          <select required id="redFlagPublicationCategory" name="reason" class="form-control selectpicker">
            <option value="Potential plagiarism" title="Potential plagiarism"> Potential plagiarism </option>
            <option value="Potential ethical issues" title="Potential ethical issues"> Potential ethical issues </option>
            <option value="Potential inappropriate use of statistics" title="Potential inappropriate use of statistics"> Potential inappropriate use of statistics </option>
            <option value="Potential misrepresentation of findings" title="Potential misrepresentation of findings"> Potential misrepresentation of findings </option>
            <option value="Potential image manipulation" title="Potential image manipulation"> Potential image manipulation </option>
            <option value="Potential inappropriate data manipulation/fabrication" title="Potential inappropriate data manipulation/fabrication"> Potential inappropriate data manipulation/fabrication </option>
            <option value="Potential copyright issues" title="Potential copyright issues"> Potential copyright issues </option>
            <option value="Potential inappropriate or unlawful content" title="Potential inappropriate or unlawful content"> Potential inappropriate or unlawful content </option>
          </select>

          <br />
          <br />

          <label for="redFlagPublicationDescription">Description</label>
          <textarea required id="redFlagPublicationDescription" class="form-control" name="description" placeholder="Write a comment explaining the issue. Max characters 200" maxlength="100"></textarea>


          <div class="buttonsContainer">
            <button type="button" class="btn btn-sm btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
            <button type="submit" class="btn btn-sm btn-primary">Submit</button>
          </div>
        </form>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
